# ==============================================================================
# MIZAN BACKEND - ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ------------------------------------------------------------------------------
# DATABASE
# ------------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/mizan

# ------------------------------------------------------------------------------
# REDIS
# ------------------------------------------------------------------------------
# Redis connection string for caching and queues
REDIS_URL=redis://localhost:6379

# ------------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# ------------------------------------------------------------------------------
# Secret key for JWT token signing (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Secret key for session encryption
SESSION_SECRET=your-super-secret-session-key-change-this

# ------------------------------------------------------------------------------
# AI PROVIDERS
# ------------------------------------------------------------------------------
# OpenAI API Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google Gemini API Configuration
GOOGLE_API_KEY=...
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4000

# Mistral AI API Configuration
MISTRAL_API_KEY=...
MISTRAL_MODEL=mistral-large-latest
MISTRAL_MAX_TOKENS=4000

# Cohere API Configuration
COHERE_API_KEY=...
COHERE_MODEL=command
COHERE_MAX_TOKENS=4000

# AI Provider Settings
AI_PROVIDER_TIMEOUT=30000
AI_CONSENSUS_THRESHOLD=0.7
AI_MAX_RETRIES=3

# ------------------------------------------------------------------------------
# EMAIL SERVICE
# ------------------------------------------------------------------------------
# SendGrid API Key
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@mizan.ai
SENDGRID_FROM_NAME=Mizan Platform

# ------------------------------------------------------------------------------
# PAYMENT PROCESSING
# ------------------------------------------------------------------------------
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ------------------------------------------------------------------------------
# HRIS INTEGRATIONS
# ------------------------------------------------------------------------------
# BambooHR
BAMBOOHR_API_KEY=
BAMBOOHR_SUBDOMAIN=

# Workday
WORKDAY_API_KEY=
WORKDAY_TENANT_ID=

# ADP
ADP_CLIENT_ID=
ADP_CLIENT_SECRET=

# SAP SuccessFactors
SAP_API_KEY=
SAP_COMPANY_ID=

# ------------------------------------------------------------------------------
# SOCIAL MEDIA INTEGRATIONS
# ------------------------------------------------------------------------------
# Buffer (for automated posting to multiple platforms)
BUFFER_ACCESS_TOKEN=

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# Twitter/X
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=

# Instagram
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# ------------------------------------------------------------------------------
# FILE STORAGE
# ------------------------------------------------------------------------------
# Local or cloud storage configuration
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ------------------------------------------------------------------------------
# MONITORING & LOGGING
# ------------------------------------------------------------------------------
# Sentry for error tracking (optional)
SENTRY_DSN=

# Log retention
LOG_RETENTION_DAYS=30

# ------------------------------------------------------------------------------
# RATE LIMITING
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------------------------------------------
# CORS
# ------------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ------------------------------------------------------------------------------
# FEATURES FLAGS
# ------------------------------------------------------------------------------
ENABLE_SOCIAL_MEDIA=true
ENABLE_HRIS_SYNC=true
ENABLE_AI_CONSENSUS=true
ENABLE_ANALYTICS=true

# ------------------------------------------------------------------------------
# DEVELOPMENT ONLY
# ------------------------------------------------------------------------------
# Set to true to enable debug logging
DEBUG=false

# Disable authentication for local development (NOT for production)
DISABLE_AUTH=false
