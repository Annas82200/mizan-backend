{
  "name": "lxp-api-endpoint-tests",
  "version": "1.0.0",
  "description": "API endpoint tests for LXP module",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:api": "jest --testNamePattern='API'",
    "test:endpoints": "jest --testPathPattern='api'",
    "test:performance": "jest --testNamePattern='Performance'",
    "test:clean": "jest --clearCache && jest",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "supertest": "^6.3.3",
    "express": "^4.18.2",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/api/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "../../api/**/*.ts",
      "../../lxp-module.ts",
      "!**/*.d.ts",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "keywords": [
    "lxp",
    "api",
    "endpoints",
    "tests",
    "jest",
    "typescript",
    "supertest"
  ],
  "author": "Mizan Team",
  "license": "MIT"
}
