{
  "name": "lxp-trigger-integration-tests",
  "version": "1.0.0",
  "description": "Trigger integration tests for LXP module",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:triggers": "jest --testNamePattern='Trigger'",
    "test:integration": "jest --testPathPattern='trigger-integration'",
    "test:performance": "jest --testNamePattern='Performance'",
    "test:clean": "jest --clearCache && jest",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "@types/jest": "^29.5.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/trigger-integration/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "../../lxp-module.ts",
      "../../../results/trigger-engine.ts",
      "../../../results/unified-results.ts",
      "!**/*.d.ts",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "lxp",
    "trigger",
    "integration",
    "tests",
    "jest",
    "typescript"
  ],
  "author": "Mizan Team",
  "license": "MIT"
}
